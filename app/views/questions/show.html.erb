<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><%= @question.title %></h2>
  </div>
  <div class="panel-body">
    <%= @question.description %><br>
    <small>Posted by: <%= @question.user.email %></small>
  </div>
</div>

<div class="panel panel-default">
  <% if @new_answer.errors.any? %>
    <p><strong>Error!</strong> <%= @new_answer.errors.full_messages.to_sentence %></p>
  <% end %>
  <div class="form-group">
    <%= bootstrap_form_for [@question, @new_answer] do |a| %>
      <%= a.text_area :response, label: "Answer This Question" %>
      <%= a.hidden_field :question_id %>
    </div>
    <div class="col-sm-offset-0 col-sm-10">
      <%= a.primary "Submit" %>
    </div>
    <% end %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Submitted Answers</h2>
  </div>
  <ul class="list-group">
  <% @question.answers.each do |a| %>
    <li class="list-group-item"><%= a.response %><br>
    <small><%= a.user.email %></small></li>
  <% end %>
  </ul>
</div>